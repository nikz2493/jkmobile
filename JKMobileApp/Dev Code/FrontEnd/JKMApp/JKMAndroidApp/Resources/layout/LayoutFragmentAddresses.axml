<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FD">
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingRight="16dp"
      android:paddingLeft="16dp"
      android:paddingBottom="16dp">
    <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textSize="@dimen/titleDiscription_text_size"
       android:textColor="#d3d3d3"
       android:id="@+id/tvtitleDiscription"
       android:visibility="gone"
       android:text="Lorem ipsum dolor sit amet, sconsectetur odipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commondo conssequat." />
    <ViewSwitcher
       android:layout_marginTop="10dp"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:id="@+id/viewSwitcher">
      <LinearLayout
        android:id="@+id/linearLayoutDisplay"
        android:layout_marginTop="10dp"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_shadow"
        android:orientation="vertical">
      <TextView
          android:paddingRight="16dp"
          android:paddingLeft="16dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="@dimen/text_size_tvServicetitle"
          android:id="@+id/tvDisplayAddresstitle"
          android:text="Please confirm the origin and destination addresses for the move."
          android:textColor="@color/dark_gray"
          android:textStyle="bold" />
      <LinearLayout
          android:paddingRight="16dp"
          android:paddingLeft="16dp"
          android:layout_marginTop="16dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/text_size_tvServicetitle"
              android:text="Origin"
              android:id="@+id/tvDisplayOrigin"
              android:textAllCaps="true"/>
          <EditText
              android:layout_marginTop="5dp"
              android:id="@+id/txtDisplayOriginAddress"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/tv_text_size"
              android:editable="false" 
              android:focusableInTouchMode="false"
              android:theme="@style/NormalEditTextStyle"
              android:textColor="@color/dark_gray"
              android:maxLines="3"
              android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E9EAEF" />
        <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/text_size_tvServicetitle"
              android:text="Destination"
              android:id="@+id/tvDisplayDestination"
              android:textAllCaps="true"/>
          <EditText
              android:layout_marginTop="5dp"
              android:id="@+id/txtDisplayDestinationAddress"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/tv_text_size"
              android:editable="false" 
              android:focusableInTouchMode="false"
              android:theme="@style/NormalEditTextStyle"
              android:text="51 E 125th South End Ave New York, NY 10035"
              android:textColor="@color/dark_gray"
              android:maxLines="3"
              android:background="@null"/>
        </LinearLayout>
      </LinearLayout>
      <TextView
          android:id="@+id/textViewUpdatesAddresses"
          android:layout_marginTop="16dp"
          android:layout_width="match_parent"
          android:layout_height="@dimen/standard_40"
          android:background="@drawable/bottom_corner_light_gray"
          android:gravity="center"
          android:textColor="#d3d3d3"
          android:text="Update Addresses"
          android:textAllCaps="true"
          android:textSize="@dimen/tv_text_size" />
     </LinearLayout>
      <LinearLayout
       android:id="@+id/linearLayoutEdit"
       android:layout_marginTop="10dp"
       android:paddingTop="16dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/background_shadow"
       android:orientation="vertical">
        <TextView
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_tvServicetitle"
            android:id="@+id/tvEditAddresstitle"
            android:text="Please enter the correct address information.  We will confirm your changes shortly."
            android:textColor="@color/dark_gray"
            android:textStyle="bold" />
        <LinearLayout
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_tvServicetitle"
                android:text="Origin"
                android:id="@+id/tvEditOrigin"
                android:textAllCaps="true"/>
            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/txtEditOriginAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tv_text_size"
                android:theme="@style/NormalEditTextStyle"
                android:text="51 E 125th South End Ave New York, NY 10035"
                android:textColor="@color/dark_gray"
                android:maxLines="3"
                android:background="@drawable/EditText_Border"/>
          </LinearLayout>
          <View
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:background="#E9EAEF" />
          <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_tvServicetitle"
                android:text="Destination"
                android:id="@+id/tvEditDestination"
                android:textAllCaps="true"/>
            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/txtEditDestinationAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tv_text_size"
                android:theme="@style/NormalEditTextStyle"
                android:text="51 E 125th South End Ave New York, NY 10035"
                android:textColor="@color/dark_gray"
                android:maxLines="3"
                android:background="@drawable/EditText_Border"/>
          </LinearLayout>
        </LinearLayout>
        <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/standard_40"
           android:background="@drawable/bottom_corner_light_progress_color"
           android:layout_marginTop="10dp">
          <TextView
              android:id="@+id/textViewSubmitChanges"
              android:layout_width="match_parent"
              android:layout_height="@dimen/standard_40"
              android:gravity="center"
              android:text="Submit Changes"
              android:textAllCaps="true"
              android:textSize="@dimen/tv_text_size"
              android:textColor="@color/progressColor" />
          <ImageView
              android:id="@+id/imageViewTick"
              android:layout_gravity="right|center"
              android:layout_marginRight="10dp"
              android:layout_width="@dimen/fifteen_dp"
              android:layout_height="@dimen/fifteen_dp"
              android:src="@drawable/submit_tick" />
        </FrameLayout>
      </LinearLayout>
    </ViewSwitcher>
    
  </LinearLayout>
  <LinearLayout
      android:layout_alignParentBottom="true"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center_horizontal">
    <LinearLayout
       android:layout_width="@dimen/standard_150"
        android:layout_height="@dimen/standard_50"
        android:id="@+id/linearLayoutViewEstimate"
        android:background="@drawable/rounded_background_shadow"
        android:orientation="horizontal"
        android:gravity="center">
      <ImageView
         android:layout_width="@dimen/eighteen_sp"
          android:layout_height="@dimen/eighteen_sp"
          android:src="@drawable/pdf" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="View Estimate"
          android:id="@+id/tvViewEstimate"
          android:textSize="@dimen/tv_text_size"
          android:layout_marginLeft="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_50"
        android:orientation="horizontal">
      <LinearLayout
       android:id="@+id/textViewBack"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Back"
        android:gravity="center"
        android:background="#69789A"
        >
        <ImageButton
                      android:src="@drawable/arrow_back"
                      android:id="@+id/btnBack"
                      android:layout_gravity="left"
                      android:scaleType="centerInside"
                      android:background="#69789A"
                      android:layout_width="@dimen/standard_170"
                      android:layout_weight="1"
                      android:layout_height="@dimen/standard_48" />
        <TextView
                   android:id="@+id/tvback"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="left"
                   android:textSize="@dimen/btn_text_size"
                   android:layout_weight="1"
                   android:textColor="@android:color/white"
                   android:text="Back" />
      </LinearLayout>
      <TextView
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/textViewNext"
          android:text="Yes, I Confirm"
          android:textSize="@dimen/btn_text_size"
          android:gravity="center"
          android:background="#EC3D62"
          android:textColor="@android:color/white" />
    </LinearLayout>
  </LinearLayout>

</RelativeLayout>
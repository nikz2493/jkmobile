<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FD">
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingRight="16dp"
      android:paddingLeft="16dp"
      android:paddingBottom="16dp">
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="#d3d3d3"
      android:textSize="@dimen/titleDiscription_text_size"
      android:id="@+id/tvtitleDiscriptions"
      android:text="The Vital Information, included below, covers all major aspects of moving with JK.Everything from preparing for  move to our cancellation policy. Please take the time to read carefully and acknowledge receipt." />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/linearLayoutBottom"
        android:id="@+id/lnLayPDfBlock"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/standard_100"
       >
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:layout_gravity="center"
          android:id="@+id/cardview"
          android:minWidth="25px"
          android:minHeight="25px">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="0.0dp">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
            <android.webkit.WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/webView1"
                android:layout_marginBottom="0.0dp" />
          </LinearLayout>
        </android.support.v7.widget.CardView>
      </RelativeLayout>
    </RelativeLayout>

  </LinearLayout>
  <LinearLayout
      android:id="@+id/linearLayoutBottom"
      android:layout_alignParentBottom="true"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="@dimen/standard_270"
        android:layout_height="@dimen/standard_50"
        android:id="@+id/linearLayoutViewEstimate"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/rounded_background_shadow"
        android:orientation="horizontal"
        android:gravity="center">
      <ImageView
          android:layout_width="@dimen/eighteen_sp"
          android:layout_height="@dimen/eighteen_sp"
          android:src="@drawable/pdf" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="View Rights and Responsibilities"
          android:id="@+id/tvViewEstimate"
          android:textSize="@dimen/tv_text_size"
          android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_50"
        android:orientation="horizontal">
      <LinearLayout
        android:id="@+id/textViewBack"
         android:layout_weight="1"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:text="Back"
         android:gravity="center"
         android:background="#69789A"
        >
        <ImageButton
                     android:src="@drawable/arrow_back"
                     android:id="@+id/btnBack"
                     android:layout_gravity="left"
                     android:scaleType="centerInside"
                     android:background="#69789A"
                     android:layout_width="@dimen/standard_170"
                     android:layout_weight="1"
                     android:layout_height="@dimen/standard_48" />
        <TextView
                   android:id="@+id/tvback"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="left"
                   android:textSize="@dimen/btn_text_size"
                   android:layout_weight="1"
                   android:textColor="@android:color/white"
                   android:text="Back" />
      </LinearLayout>
      <TextView
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/textViewNext"
          android:text="Information Received"
          android:gravity="center"
          android:textSize="@dimen/btn_text_size"
          android:background="#EC3D62"
          android:textColor="@android:color/white" />
    </LinearLayout>
  </LinearLayout>
</RelativeLayout>
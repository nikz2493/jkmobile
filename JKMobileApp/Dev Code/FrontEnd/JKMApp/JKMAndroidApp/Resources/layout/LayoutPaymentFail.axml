<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/background_shadow"
    android:layout_height="wrap_content"
    android:weightSum="8">
  <LinearLayout
      android:layout_below="@+id/TopLogoEmail"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_weight="2"
      android:gravity="top">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:textSize="18sp"
        android:textColor="#c40919"
        android:layout_marginTop="16dp"
        android:paddingBottom="18dp"
        android:layout_gravity="center"
        android:id="@+id/tvPaymentfailtitle"
        android:textStyle="bold"
        android:text="Payment Failed" />
  </LinearLayout>
  <LinearLayout
      android:id="@+id/TopLogoEmail"
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_weight="2">
    <ImageView
        android:src="@drawable/icon_payment_failed"
        android:id="@+id/imgPaymentFailed"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
  </LinearLayout>
  <LinearLayout
      android:layout_below="@+id/TopLogoEmail"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_weight="2"
      android:layout_marginTop="20dp"
      android:gravity="top">
    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:clickable="false"
       android:textSize="@dimen/standard_14"
       android:textColor="#3d3c3c"
       android:layout_gravity="center"
       android:id="@+id/tvFailmsg1"
       android:text="You payment was unsuccessful." />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:textSize="@dimen/standard_14"
        android:textColor="#3d3c3c"
        android:layout_gravity="center"
        android:id="@+id/tvFailmsg2"
        android:text="Please try again." />
  </LinearLayout>
  <LinearLayout
     android:id="@+id/linearLayoutBottom"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_weight="2"
     android:gravity="center_horizontal"
     android:paddingBottom="0dp"
     android:layout_marginBottom="@dimen/pay_margin_20"
     android:layout_marginTop="@dimen/pay_margin_20"
     android:paddingRight="@dimen/pay_padding_16"
     android:paddingLeft="@dimen/pay_padding_16">
    <LinearLayout
          android:id="@+id/linearLayoutDisplay"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
      <RelativeLayout
          android:paddingRight="@dimen/pay_padding_16"
          android:paddingLeft="@dimen/pay_padding_16"
          android:layout_marginTop="@dimen/pay_margin_7"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_tvServicetitle"
            android:text="Transection Id"
            android:id="@+id/tvFailTransectionId"
            android:textColor="#9FA6AD"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/tvDisplayFailTransectionId"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standard_12"
            android:textColor="@color/dark_gray"
            android:text="0123456"
            android:textStyle="bold"
            android:layout_centerVertical="true" />
      </RelativeLayout>
      <View
          android:paddingRight="@dimen/pay_padding_16"
          android:paddingLeft="@dimen/pay_padding_16"
          android:layout_marginTop="@dimen/pay_margin_7"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#E9EAEF" />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>
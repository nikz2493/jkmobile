<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_weight="3">
        <ImageView
            android:src="@drawable/icon_passentry"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:textSize="@dimen/tv_text_size"
            android:textColor="#9FA6AD"
            android:paddingBottom="5dp"
            android:id="@+id/tvCreatePasswordLabel"
            android:text="Create password" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtcreatepassword"
            android:textSize="@dimen/tv_text_size"
            android:theme="@style/NormalEditTextStyle"
            android:background="@drawable/EditText_Border"
            android:password="true"
            android:singleLine="true"
            android:maxLength="20" />
        <TextView
            android:id="@+id/tvCreatePasswordErrorMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#f90212"
            android:textSize="@dimen/tv_text_size" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:textSize="@dimen/tv_text_size"
            android:textColor="#9FA6AD"
            android:paddingBottom="5dp"
            android:id="@+id/tvVerifyPasswordLabel"
            android:text="Confirm password"
            android:paddingTop="0dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtVerifypassword"
            android:textSize="@dimen/tv_text_size"
            android:theme="@style/NormalEditTextStyle"
            android:background="@drawable/EditText_Border"
            android:singleLine="true"
            android:password="true"
            android:maxLength="20" />
        <TextView
            android:id="@+id/tvVerifyyPasswordErrorMsg"
            android:text="Enter your 6- Digit Verification Code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#f90212"
            android:textSize="@dimen/tv_text_size" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_weight="3">
        <Button
            android:src="@drawable/account"
            android:background="#EC3D62"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Continue"
            android:layout_weight="1"
            android:theme="@style/ButtonTextAllCaps"
            android:textSize="@dimen/btn_text_size"
            android:textColor="@android:color/background_light"
            android:id="@+id/btnContinue" />
    </LinearLayout>
</LinearLayout>
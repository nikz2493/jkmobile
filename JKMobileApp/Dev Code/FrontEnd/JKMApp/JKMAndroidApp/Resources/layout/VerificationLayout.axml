<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="9">
  <LinearLayout
      android:id="@+id/lnlayTopLogoVerification"
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_weight="3">
    <ImageView
        android:src="@drawable/icon_verification"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
  </LinearLayout>
  <LinearLayout
      android:layout_below="@+id/lnlayCenterVerificationBlock"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_weight="3"
     
      android:layout_gravity="center"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp">

    <LinearLayout
          android:orientation="vertical"
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1" >
      <TextView
       android:text="Enter your 6-digit verification code"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/tvVerifictionCodeLabel"
       android:textColor="#9FA6AD"
       android:textSize="@dimen/tv_text_size"
       android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
       android:layout_gravity="center"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/lnLayVerficationCode"
       android:layout_weight="1" >

      <LinearLayout
         android:orientation="vertical"
         android:gravity="center"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1" >
        <EditText
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:id="@+id/txtVerficationDigit1"
              android:focusable="true"
              android:inputType="number"
              android:textSize="@dimen/tv_text_size"
              android:gravity="center"
              android:maxLength="1"
              android:textSelectHandle="@drawable/empty_cursor"
              android:textSelectHandleLeft="@drawable/empty_cursor"
              android:textSelectHandleRight="@drawable/empty_cursor"
              android:layout_marginLeft="5dp"
              android:numeric="integer"
              android:textCursorDrawable="@null"
              android:textColor="#515050"
              android:theme="@style/NormalEditTextStyle"             
              android:background="#00000000"
              android:nextFocusForward="@+id/txtVerficationDigit2"
              android:layout_weight="1" />
        <View
           android:layout_width="wrap_content"
           android:layout_height="2dp"
           android:id="@+id/viewDigit1"
           android:layout_marginLeft="5dp"
           android:layout_weight="1"
           android:background="#515050"
           android:layout_gravity="bottom"/>

      </LinearLayout>

      <LinearLayout
         android:orientation="vertical"
         android:gravity="center"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1" >
        <EditText
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:id="@+id/txtVerficationDigit2"
              android:focusable="true"
              android:gravity="center"
              android:maxLength="1"
              android:textSize="@dimen/tv_text_size"
              android:textSelectHandle="@drawable/empty_cursor"
              android:textSelectHandleLeft="@drawable/empty_cursor"
              android:textSelectHandleRight="@drawable/empty_cursor"
              android:layout_marginLeft="5dp"
              android:numeric="integer"
              android:inputType="number"
              android:textCursorDrawable="@null"
              android:theme="@style/NormalEditTextStyle"
              android:textColor="#515050"
              android:background="#00000000"
              android:nextFocusForward="@+id/txtVerficationDigit3"
              android:layout_weight="1" />
        <View
           android:layout_width="match_parent"
           android:layout_height="2dp"
           android:id="@+id/viewDigit2"
           android:layout_marginLeft="5dp"
           android:layout_weight="1"
           android:background="#515050"
           android:layout_gravity="bottom"/>

      </LinearLayout>


      <LinearLayout
         android:orientation="vertical"
         android:gravity="center"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1" >
        <EditText
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:id="@+id/txtVerficationDigit3"
              android:focusable="true"
              android:inputType="number"
              android:gravity="center"
              android:maxLength="1"
              android:textSize="@dimen/tv_text_size"
              android:textSelectHandle="@drawable/empty_cursor"
              android:textSelectHandleLeft="@drawable/empty_cursor"
              android:textSelectHandleRight="@drawable/empty_cursor"
              android:textCursorDrawable="@null"
              android:textColor="#515050"
              android:theme="@style/NormalEditTextStyle"
              android:layout_marginLeft="5dp"
              android:numeric="integer"
              android:background="#00000000"
              android:nextFocusForward="@+id/txtVerficationDigit4"
              android:layout_weight="1" />
        <View
           android:layout_width="match_parent"
           android:layout_height="2dp"
           android:id="@+id/viewDigit3"
           android:layout_marginLeft="5dp"
           android:layout_weight="1"
           android:background="#515050"
           android:layout_gravity="bottom"/>

      </LinearLayout>


      <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/txtVerficationDigit4"
            android:focusable="true"
            android:inputType="number"
            android:gravity="center"
            android:textSize="@dimen/tv_text_size"
            android:textSelectHandle="@drawable/empty_cursor"
            android:textSelectHandleLeft="@drawable/empty_cursor"
            android:textSelectHandleRight="@drawable/empty_cursor"
            android:layout_marginLeft="5dp"
            android:maxLength="1"
            android:textCursorDrawable="@null"
            android:textColor="#515050"
            android:numeric="integer"
            android:theme="@style/NormalEditTextStyle"
            android:background="#00000000"
            android:nextFocusForward="@+id/txtVerficationDigit5"
            android:layout_weight="1" />
        <View
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:id="@+id/viewDigit4"
          android:layout_marginLeft="5dp"
          android:layout_weight="1"
          android:background="#515050"
          android:layout_gravity="bottom"/>
      </LinearLayout>

      <LinearLayout
          android:orientation="vertical"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1" >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/txtVerficationDigit5"
            android:focusable="true"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:textSize="@dimen/tv_text_size"
            android:textSelectHandle="@drawable/empty_cursor"
            android:textSelectHandleLeft="@drawable/empty_cursor"
            android:textSelectHandleRight="@drawable/empty_cursor"
            android:textCursorDrawable="@null"
            android:textColor="#515050"
            android:layout_marginLeft="5dp"
            android:numeric="integer"
            android:theme="@style/NormalEditTextStyle"
            android:nextFocusForward="@+id/txtVerficationDigit6"
            android:background="#00000000"
            android:layout_weight="1" />
        <View
           android:layout_width="match_parent"
           android:layout_height="2dp"
           android:id="@+id/viewDigit5"
           android:layout_marginLeft="5dp"
           android:layout_weight="1"
           android:background="#515050"
           android:layout_gravity="bottom"/>
      </LinearLayout>

      <LinearLayout
         android:orientation="vertical"
         android:gravity="center"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1" >
        <EditText
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:id="@+id/txtVerficationDigit6"
              android:focusable="true"
              android:inputType="number"
              android:gravity="center"
              android:textSize="@dimen/tv_text_size"
              android:maxLength="1"
              android:textSelectHandle="@drawable/empty_cursor"
              android:textSelectHandleLeft="@drawable/empty_cursor"
              android:textSelectHandleRight="@drawable/empty_cursor"
              android:layout_marginLeft="5dp"
              android:numeric="integer"
              android:theme="@style/NormalEditTextStyle"
              android:textCursorDrawable="@null"
              android:textColor="#515050"
              android:background="#00000000"
              android:nextFocusForward="@+id/btnContinue"
              android:layout_weight="1" />
        <View
           android:layout_width="match_parent"
           android:layout_height="2dp"
           android:id="@+id/viewDigit6"
           android:layout_marginLeft="5dp"
           android:layout_weight="1"
           android:background="#515050"
           android:layout_gravity="bottom"/>
      </LinearLayout>
    </LinearLayout>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">
      <TextView
        android:id="@+id/tvErrorMsg"
        android:text="Error msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#f90212"
     
        android:textSize="@dimen/tv_text_size"/>
    </LinearLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:gravity="bottom"
      android:id="@+id/lnlayBottomVerificationCode"
      android:layout_weight="3">
    <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center"
          android:background="#69789A"
          android:layout_weight="1">
      <ImageButton android:src="@drawable/arrow_back"
                   android:id="@+id/btnBack"
                   android:layout_gravity="left"
                   android:scaleType="centerInside"
                   android:background="#69789A"
                   android:layout_width="49dp"
                   android:layout_height="48dp" />
      <TextView
                  android:id="@+id/tvback"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textSize="@dimen/btn_text_size"
                  android:textColor="@android:color/background_light"
                  android:text="Back" />
    </LinearLayout>

    <Button
        android:background="#EC3D62"
        android:scaleType="centerInside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Continue"
        android:theme="@style/ButtonTextAllCaps"
        android:layout_weight="1"
        android:textSize="@dimen/btn_text_size"
        android:textColor="@android:color/background_light"
        android:id="@+id/btnContinue" />
  </LinearLayout>
</LinearLayout>